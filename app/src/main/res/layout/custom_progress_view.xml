<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tranpsarentBlackForProgress"
    android:visibility="gone">



    <ProgressBar
        android:id="@+id/pleaseWaitProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/widget_min_ht"
        android:minHeight="@dimen/widget_min_ht"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLarge"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/widget_min_ht"
        android:gravity="center"
        android:paddingTop="@dimen/minMargin"
        android:paddingBottom="@dimen/minMargin"
        android:text="@string/pleaseWaitSpelling"
        android:layout_below="@id/pleaseWaitProgressbar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

</RelativeLayout>